@model IEnumerable<Service.Viewmodels.DisplayPlayer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
  
        <td>
            @item.Prename
        </td>
        <td>
            @item.Surname
        </td>
        <td>
            @item.Number
        </td>

        <td>
            @item.TeamName    
        </td>
        <td>
            <img src="@item.profilePictureURL" alt="Alternate Text" />         
        </td>
        <td>
            @Html.ActionLink("Details","Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
